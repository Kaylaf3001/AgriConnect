@using System.Security.Claims

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
    bool showSidebar = !(currentController == "Home" && currentAction == "Index") &&
                       !(currentController == "Login" && currentAction == "Login");

    var userRole = User.FindFirstValue(ClaimTypes.Role); // Assumes you're storing roles in ClaimTypes.Role
    var username = User.Identity?.Name;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agri-Connect</title>

    <!-- Bootstrap and Site Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Part2_FarmerApplication.styles.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .layout {
            display: flex;
            height: 100vh;
        }

        .sidebar {
            width: 200px;
            background-color: #4B7942;
            color: white;
            display: flex;
            flex-direction: column;
            padding: 1rem;
            border-top-right-radius: 20px;
        }

            .sidebar h2 {
                margin-bottom: 2rem;
            }

            .sidebar .menu-item {
                display: flex;
                align-items: center;
                gap: 0.75rem;
                padding: 0.75rem 0;
                font-size: 1rem;
                cursor: pointer;
            }

                .sidebar .menu-item:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                    border-radius: 6px;
                }

            .sidebar svg {
                width: 20px;
                height: 20px;
                fill: white;
            }

        .content {
            flex-grow: 1;
            background-color: white;
            padding: 2rem;
            overflow-y: auto;
        }
    </style>
</head>
<body>
    @if (showSidebar)
    {
        <div class="layout">
            <div class="sidebar">
                <h2>Agri-Connect</h2>

                <div class="menu-item">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M5.121 17.804A10.97 10.97 0 0112 15c2.21 0 4.255.64 5.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span>Welcome, @User.Identity?.Name</span>
                </div>

                <a asp-controller="Home" asp-action="Index" class="menu-item" style="text-decoration:none; color:white;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <span>Dashboard</span>
                </a>

                <a asp-controller="Home" asp-action="FarmersProducts" class="menu-item" style="text-decoration:none; color:white;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 7h18M3 12h18m-7 5h7" />
                    </svg>
                    <span>Marketplace</span>
                </a>

                @if (userRole == "Admin")
                {
                    <a asp-controller="Admin" asp-action="CreateFarmer" class="menu-item" style="text-decoration:none; color:white;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M4 6h16M4 12h8m-8 6h16" />
                        </svg>
                        <span>Add a Farmer</span>
                    </a>
                }
                else if (userRole == "Farmer")
                {
                    <a asp-controller="Products" asp-action="AddProduct" class="menu-item" style="text-decoration:none; color:white;">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M12 4v16m8-8H4" />
                        </svg>
                        <span>Add a Product</span>
                    </a>
                }

            </div>

            <div class="content">
                @RenderBody()
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
