@model List<Part2_FarmerApplication.ViewModels.FarmersProductsViewModel>

@{
    ViewData["Title"] = "Filter Farmers' Products";
}

<style>
    .farmer-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 8px;
    }
</style>

<h2>Filter Farmers' Products</h2>

<!-- Filter Form -->
<form asp-controller="Admin" asp-action="FilterFarmers" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <label for="category" class="form-label">Category</label>
            <input type="text" name="category" id="category" class="form-control" placeholder="Enter category" />
        </div>
        <div class="col-md-3">
            <label for="startDate" class="form-label">Start Date</label>
            <input type="date" name="startDate" id="startDate" class="form-control" />
        </div>
        <div class="col-md-3">
            <label for="endDate" class="form-label">End Date</label>
            <input type="date" name="endDate" id="endDate" class="form-control" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>

<!-- Filtered Results -->
@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Image</th>
                <th>Product Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Farmer Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><img src="@product.ImagePath" alt="@product.ProductName" class="img-fluid" /></td>
                    <td>@product.ProductName</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                    <td>@product.FarmerFirstName @product.FarmerLastName</td>
                    <td><img src="@(!string.IsNullOrEmpty(product.ImagePath) ? product.ImagePath : "/FarmersProductsImages/placeholder.jpg")" alt="@product.ProductName" class="farmer-image" /></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found matching the criteria.</p>
}
