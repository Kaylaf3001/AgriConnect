@model Part2_FarmerApplication.Models.FarmerModel

@{
    ViewData["Title"] = "Create Farmer";
}

<style>
    .farmer-form {
        width: 600px;
        margin: 0px 0 0px 0px; /* top, right, bottom, left */
        padding: 30px;
        border-radius: 12px;
    }

        .farmer-form h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 25px;
        }

    .form-group label {
        font-weight: 600;
        color: #34495e;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
    }

    .btn-success {
        width: 100%;
        padding: 12px;
        font-weight: bold;
        font-size: 1.1rem;
        border-radius: 10px;
        background: linear-gradient(135deg, #6bbf59, #a8eb12);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #5da74c, #95d010);
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }

    .popup {
        display: none;
        position: fixed;
        top: 30%;
        left: 40%;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        z-index: 1000;
    }

    .popup-content h3 {
        margin-bottom: 15px;
    }
</style>

<form asp-action="CreateFarmer" method="post" class="farmer-form">
    <h2>🌿 Create New Farmer</h2>

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ContactNumber"></label>
        <input asp-for="ContactNumber" type="number" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create Farmer</button>
</form>

<!-- Popup for Farmer Added -->
<div id="farmerAddedPopup" class="popup">
    <div class="popup-content">
        <h3>Farmer Added Successfully!</h3>
        <button onclick="closePopup()" class="btn btn-secondary">Close</button>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Function to show the popup
        function showPopup() {
            document.getElementById('farmerAddedPopup').style.display = 'block';
        }

        // Function to close the popup
        function closePopup() {
            document.getElementById('farmerAddedPopup').style.display = 'none';
        }

        // Show popup after form submission
        @if (TempData["FarmerAdded"] != null)
        {
                <text>showPopup();</text>
        }
    </script>
}
