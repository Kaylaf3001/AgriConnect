@model List<Part2_FarmerApplication.Models.FarmerModel>

@{
    ViewBag.Title = "Farmers Created by You";
}

<h2>Farmers Created by You</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Farmer ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>@farmer.FarmerID</td>
                    <td>@farmer.FirstName @farmer.LastName</td>
                    <td>@farmer.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No farmers found.</p>
}
