@model Part2_FarmerApplication.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Dashboard Styling -->
<style>

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .stats-card {
        background: linear-gradient(135deg, #4B7942 0%, #92fe9d 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease;
    }

        .stats-card:hover {
            transform: translateY(-5px);
        }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
    }

    .section-title {
        font-size: 1.5rem;
        margin: 30px 0 10px;
        color: #333;
        border-bottom: 2px solid #ddd;
        padding-bottom: 5px;
    }

    .list-group-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .list-group-item span {
            font-weight: 500;
        }

    .emoji-icon {
        font-size: 1.2rem;
        margin-right: 6px;
    }
</style>
    <h1 class="dashboard-title">📊 Admin Dashboard</h1>

    <!-- Overview Stats -->
    <div class="row g-4">
        <div class="col-md-6">
            <div class="stats-card">
                <div class="emoji-icon">👨‍🌾</div>
                <div>Total Farmers</div>
                <div class="stats-number">@(Model?.TotalFarmers ?? 0)</div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="stats-card">
                <div class="emoji-icon">🌽</div>
                <div>Total Products</div>
                <div class="stats-number">@(Model?.TotalProducts ?? 0)</div>
            </div>
        </div>
    </div>

    <!-- Recent Farmers -->
    <div>
        <h2 class="section-title mt-5">🧑‍🌾 Recent Farmers</h2>
        <ul class="list-group">
            @if (Model?.RecentFarmers != null && Model.RecentFarmers.Count > 0)
            {
                foreach (var farmer in Model.RecentFarmers)
                {
                    <li class="list-group-item">
                        <span>👤 @farmer.FirstName @farmer.LastName</span>
                        <small class="text-muted">@farmer.Email</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item text-muted">No recent farmers found.</li>
            }
        </ul>
    </div>

    <!-- Recent Products -->
    <div>
        <h2 class="section-title mt-5">🛒 Recent Products</h2>
        <ul class="list-group">
            @if (Model?.RecentProducts != null && Model.RecentProducts.Count > 0)
            {
                foreach (var product in Model.RecentProducts)
                {
                    <li class="list-group-item">
                        <span>📦 @product.Name</span>
                        <small class="text-muted">@product.Category</small>
                    </li>
                }
            }
            else
            {
                <li class="list-group-item text-muted">No recent products found.</li>
            }
        </ul>
</div>
