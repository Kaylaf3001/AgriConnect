@model List<Part2_FarmerApplication.ViewModels.FarmersProductsViewModel>

@{
    ViewData["Title"] = "Farmers Products";
}

<h2>Farmers Products</h2>

@if (Model.Count == 0)
{
    <p>No products available yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Farmer Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Category</td>
                    <td>@product.ProductionDate.ToShortDateString()</td>
                    <td>@product.FarmerFirstName @product.FarmerLastName</td>
                </tr>
            }
        </tbody>
    </table>
}
