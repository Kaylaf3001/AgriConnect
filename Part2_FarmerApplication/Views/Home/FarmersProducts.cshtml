@model List<Part2_FarmerApplication.ViewModels.FarmersProductsViewModel>

@{
    ViewData["Title"] = "Farmers Products";
}

<style>
    /* Card Styles from Uiverse */
    .cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-top: 20px;
    }

    .card {
        display: flex;
        flex-direction: column;
        width: 230px;
        height: 280px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 10px 12px rgba(0, 0, 0, 0.08), -4px -4px 12px rgba(0, 0, 0, 0.08);
        overflow: hidden;
        transition: all 0.3s;
        cursor: pointer;
        box-sizing: border-box;
        padding: 10px;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.1), -4px -4px 12px rgba(0, 0, 0, 0.08);
        }

    .card-image-container {
        width: 100%;
        height: 64%;
        border-radius: 10px;
        margin-bottom: 12px;
        overflow: hidden;
        background-color: rgb(165, 165, 165);
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .card-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .card-title {
        margin: 0;
        font-size: 17px;
        font-family: "Lucida Sans", Geneva, Verdana, sans-serif;
        font-weight: 600;
        color: #1797b8;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    .card-des {
        margin: 0;
        font-size: 13px;
        font-family: "Lucida Sans", Geneva, Verdana, sans-serif;
        color: #1797b8;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<h2>Farmers Products</h2>

@if (Model.Count == 0)
{
    <p>No products available yet.</p>
}
else
{
    <div class="cards-container">
        @foreach (var product in Model)
        {
            <div class="card">
                <div class="card-image-container">
                    <img src="@(!string.IsNullOrEmpty(product.ImagePath) ? product.ImagePath : "/FarmersProductsImages/placeholder.jpg")" alt="@product.ProductName" />
                </div>
                <p class="card-title">@product.ProductName</p>
                <p class="card-des">
                    Category: @product.Category<br />
                    Date: @product.ProductionDate.ToShortDateString()<br />
                    Farmer: @product.FarmerFirstName @product.FarmerLastName
                </p>
            </div>
        }
    </div>
}
