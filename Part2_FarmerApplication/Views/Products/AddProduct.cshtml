@model Part2_FarmerApplication.Models.ProductsModel

@{
    ViewData["Title"] = "Add Product";
}

<style>
    .form-container {
        width: 600px;
        margin: 0px 0 0px 0px; /* Top, Right, Bottom, Left */
        padding: 30px;
        border-radius: 12px;
    }

    .form-title {
        font-size: 2rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 25px;
    }

    .form-group label {
        font-weight: 600;
        color: #34495e;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        font-size: 1rem;
    }

    .btn-success {
        width: 100%;
        padding: 12px;
        font-weight: bold;
        font-size: 1.1rem;
        border-radius: 10px;
        background: linear-gradient(135deg, #6bbf59, #a8eb12);
        border: none;
    }

        .btn-success:hover {
            background: linear-gradient(135deg, #5da74c, #95d010);
        }

    .alert-success {
        font-weight: 600;
        margin-bottom: 20px;
        color: #155724;
        background-color: #d4edda;
        padding: 10px 15px;
        border-radius: 8px;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="form-container">
    <h2 class="form-title">🌽 Add New Product</h2>

    @if (TempData["AddProduct"] != null)
    {
        <div class="alert alert-success">Product added successfully!</div>
    }

    <form asp-controller="Products" asp-action="AddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Category"></label>
            <select asp-for="Category" class="form-control">
                <option value="">-- Select a Category --</option>
                @foreach (var category in ViewBag.Categories as List<string>)
                {
                    <option value="@category">@category</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ProductionDate"></label>
            <input asp-for="ProductionDate" class="form-control" type="date" />
            <span asp-validation-for="ProductionDate" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label for="Image">Product Image</label>
            <input type="file" class="form-control" id="ImageFile" name="ImageFile" accept="image/*" />
        </div>

        <button type="submit" class="btn btn-success">Add Product</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
