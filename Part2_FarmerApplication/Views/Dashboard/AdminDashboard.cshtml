@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 100%;
        padding: 0;
        margin: 0;
    }

    .layout {
        display: flex;
        height: 100vh;
    }

    .sidebar {
        width: 200px;
        background-color: #4B7942;
        color: white;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        border-top-right-radius: 20px;
    }

        .sidebar h2 {
            margin: 0 0 2rem 0;
            font-size: 1.2rem;
            font-weight: bold;
        }

        .sidebar .menu-item {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 0;
            font-size: 1rem;
            cursor: pointer;
        }

            .sidebar .menu-item:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 6px;
            }

        .sidebar svg {
            width: 20px;
            height: 20px;
            fill: white;
        }

    .content {
        flex-grow: 1;
        background-color: white;
        padding: 2rem;
    }
</style>

    <div class="content">
        <h1>Welcome to Agri-Connect</h1>
        <p>Admin</p>
    </div>